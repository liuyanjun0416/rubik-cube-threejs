{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "module": "esnext",
      "target": "esnext",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "rootDir": "./",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "exclude": [
      "node_modules",
      "build",
      "jest",
      "dist"
    ]
  }